<h1 align="center">Log in</h1>

<%= form_for(:session, :html=> {class:"form-horizontal", role:"form"}, url:login_path) do |i| %>
    <div class ="form-group">
      <div class="control-label col-sm-2">
         <%= i.label :email %>
      </div>
      <div class="col-sm-7">
         <%= i.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true %>
      </div>
    </div>
    <div class ="form-group">
      <div class="control-label col-sm-2">  
          <%= i.label :password %>
      </div>
      <div class="col-sm-7">
          <%= i.password_field :password, class:"form-control", autocomplete: "off" %>
      </div>
    </div>  
    <div class="form-grup">
      <div class="col-sm-offset-2 col-sm-10">
          <%= i.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    </div>      
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "Back to articles listing", articles_path %> 
    </div>